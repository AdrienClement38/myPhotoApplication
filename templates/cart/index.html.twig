{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="cart">
        <h1 class="cart__title">Panier <span id="cart-total"></span></h1>
        <table class="cart__table">
            <thead>
            <tr>
                <th class="cart__header">Photo</th>
                <th class="cart__header">Titre</th>
                <th class="cart__header">Prix</th>
                <th class="cart__header">Quantité</th>
                <th class="cart__header">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in datas %}
                <tr>
                    <td class="cart__cell"><img src="{{ item.photo.imageUrl }}" alt="{{ item.photo.title }}" class="cart__image"></td>
                    <td class="cart__cell">{{ item.photo.title }}</td>
                    <td class="cart__cell">{{ item.photo.price }}€</td>
                    <td class="cart__cell">{{ item.quantity }}</td>
                    <td class="cart__cell">
                        <button onclick="window.location.href='{{ path('app_cart_decrement', {'id': item.photo.id}) }}'" class="cart__btn cart__btn--decrement">-</button>
                        <button onclick="window.location.href='{{ path('app_cart_increment', {'id': item.photo.id}) }}'" class="cart__btn cart__btn--increment">+</button>
                        <button onclick="window.location.href='{{ path('app_cart_remove', {'id': item.photo.id}) }}'" class="cart__btn cart__btn--remove">Supprimer</button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="cart__cell">Votre panier est vide</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="5" class="cart__cell">
                    <button onclick="window.location.href='{{ path('app_cart_clear') }}'" class="cart__btn cart__btn--clear">Vider le panier</button>
                </td>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
